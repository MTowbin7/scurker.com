{{!< layout.hbs }}
<h2 class="title">{{page.title}}</h2>
<date>{{date page.date "D MMM YYYY"}}</date>
<section class="post">
  {{{page.html}}}
</section>

<section class="social">
  {{> social}}
</section>

{{{pagination}}}

{{! Only have disqus show up when we're live }}
{{~#is env.mode "build"}}
<section class="comments">
  {{> comments}}
</section>
{{~/is}}